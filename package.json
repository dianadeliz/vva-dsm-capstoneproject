{
  "name": "voice-virtual-assistant",
  "version": "1.0.0",
  "description": "A comprehensive Voice Virtual Assistant with authentication, weather, navigation, chat, and translation features",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start",
    "test": "concurrently \"npm run test:server\" \"npm run test:client\"",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:server:watch": "cd server && npm run test:watch",
    "test:client:watch": "cd client && npm test -- --watch",
    "test:coverage": "concurrently \"npm run test:server:coverage\" \"npm run test:client:coverage\"",
    "test:server:coverage": "cd server && npm run test:coverage",
    "test:client:coverage": "cd client && npm test -- --coverage --watchAll=false"
  },
  "keywords": [
    "voice-assistant",
    "virtual-assistant",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "react-router-dom": "^6.30.1"
  }
}
